<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhai.book.dao.BookDao">
    <!--设置domain类和数据库中表的字段一一对应，注意数据库字段和domain类中的字段名称不致，此处一定要！-->
    <resultMap id="BaseResultMap" type="com.zhai.book.domin.Book">
        <id column="id" property="id" jdbcType="NUMERIC" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="recommend" property="recommend" jdbcType="VARCHAR" />
        <result column="status" property="status" jdbcType="NUMERIC" />
    </resultMap>
    <!-- 查询单条记录 -->
    <select id="selectBookById" parameterType="int" resultMap="BaseResultMap">
        SELECT * FROM legion_writing_book WHERE id = #{id}
    </select>
</mapper>
